//#include "cannon/cannon_interface.hpp"
#include "test_running.hpp"
BOOST_AUTO_TEST_CASE(@name@_component_test)
{
	using namespace geek;
	component_ptr @name@_comp = component_factories::get_instance().create("@name@");

	//cannon_interface * cannon = cannon_comp->query_interface<cannon_interface>();
	game_interface* game = @name@_comp->query_interface<game_interface>();


	//game->init();

	test_running<> runnging;
	//cannon->load();


	duration_type accumulator  = boost::chrono::milliseconds(0);
	duration_type step_time  = boost::chrono::milliseconds(17);
	while(runnging.is_running())
	{

		//runnging.one_step();
		duration_type const& interval = runnging.one_step();
		accumulator = accumulator + interval;

		unsigned int step = unsigned int(accumulator /step_time);

		if(step > 0)
		{
			game->update(step);
			accumulator -= (step * step_time);
		}
	};
	//cannon->unload();
	//game->shutdown();

}

#endif // GEEK_@name_toupper@_COMPONENT_TEST_@name_toupper@_COMPONENT_TEST_HPP
