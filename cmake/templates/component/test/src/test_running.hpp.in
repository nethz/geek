#ifndef GEEK_@name_toupper@_COMPONENT_TEST_TEST_RUNNING_HPP
#define GEEK_@name_toupper@_COMPONENT_TEST_TEST_RUNNING_HPP

// MS compatible compilers support #pragma once
#if defined(_MSC_VER) && (_MSC_VER >= 1020)
# pragma once
#endif

namespace geek
{

	template<class StopWatchs = watche_filter<10> >
	class test_running
	{
	public:
		test_running(void):_is_runnging(true)
		{
			key_pressed_connection_ = geek::input_manager_interface::get_singleton().on_key_pressed.connect(boost::bind(&test_running::key_pressed, this, _1));
			watche_.reset();
		}
		bool is_running(void) const
		{
			return _is_runnging;

		}
		geek::duration_type const& one_step(void)
		{
			geek::duration_type const& interval = watche_.get_interval();
			system_interface::get_singleton().update(interval);
			return interval;

		}
		~test_running(void)
		{
			key_pressed_connection_.disconnect();
		}


		bool key_pressed(key_event const& evt)
		{					
			//bin.wang 2011.1.7 最初代码
			//return CEGUI::System::getSingleton().injectChar( evt.getText() )|| ret;	
			if (evt.get_key() == geek::KC_ESCAPE)//为啥？
			{//处理特殊事件
				_is_runnging = false;
			}
			//bin.wang 2011.1.11 改动代码
			return false;
		}
	private:

		StopWatchs watche_;
		boost::signals2::connection key_pressed_connection_;
		bool _is_runnging;

	};
}

#endif // GEEK_@name_toupper@_COMPONENT_TEST_TEST_RUNNING_HPP


